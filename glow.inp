&glow_input

! Namelist input file for glow model driver glow_drv.F90.

! tgcm_ncfile: TIEGCM or TIMEGCM history file. If this is provided, glow_drv will
!   use tgcm geometric heights, and loop over the tgcm lat x lon grid.
!   (see below for example history files on hao aim disk)
! if no tgcm_ncfile is provided, glow_drv will use MSIS and IRI.

 tgcm_ncfile='/hao/aim/stans/tiegcm/test/tiegcm.scntr_mareqx_smin_001.nc'

! tgcm_mtime: requested model time on tgcm_ncfile (day,hour,minute)
! if tgcm_mtime is not provided, the first history on the file will be used.

!tgcm_mtime = 80,22,0

! output file:

glow_ncfile = '/hao/tethysv1/data/glowout/test25.nc'

! directory containing IRI coefficient data files.

iri90_dir   = '/home/stans/mod/iri/'

! flag specifying whether or not to loop over longitudes:

loop_lons = .true.

! flags controlling various glow options:

jlocal = 0      ! 0 = full electron transport, 1 = local only
kchem = 4       ! 3 = use specified Ne, 4 = calculate Ne < 200 km, specified Ne > 200 km
iscale = 1      ! 0 = Hinteregger solar model, 1 = EUVAC solar model, 2 = user specified
xuvfac = 3.     ! multiply solar flux by xuvfac, EUVAC 18-50 A or Hinteregger 18-250

! inputs used for MSIS/IRI runs (if tgcm run, these are taken from input history):

glati = 0.     ! currently ignored (lats will be -87.5 to 87.5 by 5)
glongi= -180.  ! longitude if tgcm_ncfile not provided and loop_lons = .false.
idate = 98355  ! date in yyddd format
ut    = 0.     ! universal time in seconds (e.g., 43200. would be 12 hours)
f107a = 70.    ! F10.7 81-day centered average
f107  = 70.    ! F10.7 daily value
f107p = 70.    ! F10.7 daily value for previous day
ap    = 4.     ! Ap index

! auroral inputs for MSIS/IRI runs only:

ef     = 1.0    ! Auroral electron energy flux, erg cm-2.
ec     = 2000.  ! Auroral electron characteristic energy, eV
itail  = 0      ! Low-energy tail (1=yes, 0=no)
fmono  = 0.     ! Monoenergetic energy flux, erg cm-2
emono  = 0.     ! Monoenergetic characteristic energy, keV


